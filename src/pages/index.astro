---
import Layout from "../layouts/Layout.astro";

import PostsList from "../components/postsList.astro";
import Profile from "../components/profile.astro";
---

<Layout>
  <div class="uk-container flex">
    <!-- Content column -->
    <PostsList />
    <!-- Main divider -->
    <hr class="uk-divider-vertical h-screen md:block hidden" />
    <div class="md:block hidden">
      <Profile />
    </div>
  </div>
  <div id="offcanvas-left" data-uk-offcanvas="mode: push; overlay: true">
    <div class="uk-offcanvas-bar p-4">
      <button
        class="uk-offcanvas-close absolute right-4 top-4"
        type="button"
        data-uk-close></button>

      <h3 class="uk-h3">Title</h3>

      <p class="mt-4">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
        tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
        veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
        commodo consequat.
      </p>
    </div>
  </div>
  <div id="offcanvas-right" data-uk-offcanvas="mode: push; overlay: true; flip: true">
    <div class="uk-offcanvas-bar p-4">
      <button
        class="uk-offcanvas-close absolute right-4 top-4"
        type="button"
        data-uk-close></button>

          <Profile />
    </div>
  </div>
</Layout>

<!-- Scroll -->
<style scoped>
  #posts-view {
    height: calc(100vh - 106px);
    margin-right: 1px;
  }

  *,
  *::before,
  *::after {
    /* width */
    ::-webkit-scrollbar {
      width: 4px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
      /* box-shadow: inset 0 0 5px hsl(var(--primary) / 0.2); */
      border-radius: 4px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
      background: hsl(var(--primary) / 0.2);
      border-radius: 4px;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
      background: #b30000;
    }
  }
</style>
